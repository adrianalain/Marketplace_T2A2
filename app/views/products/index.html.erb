<h1>Product List</h1>

<div class="row">
  <% @products.each do |product| %>
    <div class="col-sm-5">
    <div class="card" style="width: 20rem;">
      <div class="card-body">
        <h6 class="card-image-top"><%= cl_image_tag product.image.key, transformation: ["media_lib_thumb"], :width=>150, :crop=>"scale", cloud_name: "nakoawolf" %></h6>
        <h5 class="card-title"><%= product.name %></h5>
        <p class="card-text"><%= product.description %></p>
        <h6 class="card-title">$<%= product.price.to_f %></h6>
        <% if current_user && current_user.id == product.user_id  %>
        <%= button_to "Edit your Product", product, method: :get, class: "btn btn-outline-warning" %>
          <% else %>
          <%= button_to "Buy", checkout_index_path, params: {id: product.id}, remote: true, class: "btn btn-outline-success" %>
        <% end %>
      </div>
    </div>
    </div>
    <% end %>
</div>
