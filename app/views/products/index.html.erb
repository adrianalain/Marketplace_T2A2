<%= render 'partials/navbar' %>
<h1>Product List</h1>
<div class="row row-cols-1 row-cols-md-3 g-4">
  <div class="col">
  <% @products.each do |product| %>
    <div class="card h-100">
      <img src="..." class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= product.name %></h5>
        <p class="card-text"><%= product.description %></p>
        <h6 class="card-title"><%= product.price %></h6>
        <a href="#" class="btn btn-primary">Go somewhere</a>
        <%= button_to "Edit this product", edit_product_path(product), method: :get, class: "btn btn-outline-warning" %>
        <%= button_to "Destroy this product", product, method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this product?" } }, class: "btn btn-outline-danger" %>
      </div>
    </div>
    <% end %>
  </div>
</div>


 